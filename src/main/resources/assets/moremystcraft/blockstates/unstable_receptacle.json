{
    "multipart": [
        {
            "when": {"rotation": "north"},
            "apply": [
                {
                    "model": "moremystcraft:unstable_receptacle",
                    "y": 180
                }
            ]
        },
        {
            "when": {"rotation": "east"},
            "apply": [
                {
                    "model": "moremystcraft:unstable_receptacle",
                    "y": 270
                }
            ]
        },
        {
            "when": {"rotation": "south"},
            "apply": [
                {
                    "model": "moremystcraft:unstable_receptacle",
                    "y": 0
                }
            ]
        },
        {
            "when": {"rotation": "west"},
            "apply": [
                {
                    "model": "moremystcraft:unstable_receptacle",
                    "y": 90
                }
            ]
        },
        {
            "when": {"OR": [{"rotation": "up"}, {"rotation": "down"}]},
            "apply": [
                {
                    "model": "moremystcraft:unstable_receptacle",
                    "x": 90
                }
            ]
        }
    ]
}